<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jskgmail.lifesaver.Main99Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_300">

        <com.daimajia.slider.library.SliderLayout
            android:id="@+id/slider"
            android:layout_width="match_parent"
            android:layout_height="200dp"

            android:layout_alignParentStart="true"

            android:layout_marginTop="34dp"
            android:padding="8dp"
            custom:auto_cycle="true"
            custom:indicator_visibility="visible"
            custom:pager_animation="Accordion"
            custom:pager_animation_span="1100" />

        <com.daimajia.slider.library.Indicators.PagerIndicator
            android:id="@+id/custom_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            custom:selected_color="#0095BF"
            custom:selected_drawable="@drawable/cast_abc_scrubber_control_to_pressed_mtrl_000"
            custom:selected_height="6dp"
            custom:selected_padding_left="5dp"
            custom:selected_padding_right="5dp"
            custom:selected_width="6dp"
            custom:shape="oval"
            custom:unselected_color="#55333333"
            custom:unselected_height="6dp"
            custom:unselected_padding_left="5dp"
            custom:unselected_padding_right="5dp"
            custom:unselected_width="6dp"

            />

        <TextView
            android:id="@+id/tt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/slider"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="12dp"
            android:text="Nearest to you "
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tt"
            android:background="@color/white"
            android:padding="12dp">

            <ImageView
                android:id="@+id/ho"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"

                android:layout_marginStart="17dp"
                app:srcCompat="@drawable/hs" />

            <ImageView
                android:id="@+id/bb"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="false"

                android:layout_centerHorizontal="true"
                android:layout_toLeftOf="@+id/ps"
                android:layout_toRightOf="@+id/ho"
                android:foregroundGravity="center_horizontal"
                app:srcCompat="@drawable/bbb" />

            <ImageView
                android:id="@+id/ps"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"

                android:layout_marginEnd="19dp"
                app:srcCompat="@drawable/ps" />


            <TextView
                android:id="@+id/textView25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ho"
                android:layout_toStartOf="@+id/bb"
                android:text="Hospital" />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView25"
                android:layout_centerHorizontal="true"
                android:text="BloodBank" />

            <TextView
                android:id="@+id/textView31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/ps"
                android:text="Police Station" />


        </RelativeLayout>

        <TextView
            android:id="@+id/textView311"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tt"
            android:layout_below="@+id/rl"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="13dp"
            android:text="Tools for you"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView311"
            android:background="@color/white"
            android:padding="12dp">

            <ImageView
                android:id="@+id/hoo"
                android:layout_width="50dp"
                android:layout_height="45dp"

                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="17dp"
                android:layout_toEndOf="@+id/hoo"
                app:srcCompat="@drawable/ic_report_problem_black_24dp" />

            <ImageView
                android:id="@+id/bob"
                android:layout_width="45dp"
                android:layout_height="45dp"

                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="17dp"
                android:layout_toEndOf="@+id/textView25o"
                android:foregroundGravity="center_horizontal"
                app:srcCompat="@drawable/bt" />

            <ImageView
                android:id="@+id/poss"
                android:layout_width="45dp"
                android:layout_height="45dp"

                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/textView31oo"
                android:layout_centerInParent="false"
                android:foregroundGravity="center_horizontal"
                app:srcCompat="@drawable/ic_face_black_24dp" />

            <ImageView
                android:id="@+id/pos"
                android:layout_width="45dp"
                android:layout_height="45dp"

                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="17dp"
                app:srcCompat="@drawable/ic_contacts_black_24dp" />


            <TextView
                android:id="@+id/textView25o"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="11dp"
                android:text="Complaint Registration"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/textView30o"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/bob"
                android:layout_below="@+id/bob"
                android:foregroundGravity="center_horizontal"
                android:text="Find Beacons"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/textView31oo"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="12dp"
                android:layout_toStartOf="@+id/textView31o"
                android:foregroundGravity="center_horizontal"
                android:text="Face Recognition"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/textView31o"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:text="Emergency Contacts"
                android:textSize="13sp" />


        </RelativeLayout>

        <TextView
            android:id="@+id/tty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl1"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="12dp"
            android:text="First Aid Tips"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="16sp" />

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"

            android:layout_height="460dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tty"
            android:layout_gravity="bottom"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingBottom="30dp"
            android:paddingEnd="@dimen/card_padding"
            android:paddingLeft="@dimen/card_padding"
            android:paddingRight="@dimen/card_padding"
            android:paddingStart="@dimen/card_padding" />

        <TextView
            android:id="@+id/textView32"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/tt"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:text="Tips and Precautions:"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="16sp" />


        <com.nightonke.boommenu.BoomMenuButton
            android:id="@+id/bmb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="19dp"
            app:bmb_buttonEnum="textOutsideCircle" />
    </RelativeLayout>
</ScrollView>
